datasource db {
  provider = "postgresql" // ou "postgresql" / "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

enum ROLE {
  RESIDENT
  DOORMAN
  MANAGER
  OWNER
  ADMIN
}

model Condominium {
  id        Int      @id @default(autoincrement())
  name      String
  address   String
  cnpj      String   @unique
  contact   String
  email     String   @unique
  phone     String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users     User[]
  residents Resident[]
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      ROLE     @default(RESIDENT)

  firstAccess Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  personId  Int
  condominiumId  Int
  person    Person   @relation(fields: [personId], references: [id])
  condominium    Condominium   @relation(fields: [condominiumId], references: [id])
}

model Person {
  id        Int      @id @default(autoincrement())
  name      String
  cpf       String @unique
  phone     String
  contact   String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  users     User[]
  residents Resident[]
}

model Resident {
  id        Int      @id @default(autoincrement())
  personId  Int
  condominiumId  Int
  apartment String
  block     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  person    Person   @relation(fields: [personId], references: [id])
  condominium    Condominium   @relation(fields: [condominiumId], references: [id])
}
